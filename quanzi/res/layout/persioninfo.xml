<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"> 
<LinearLayout 
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"        
    >  
    <include layout="@layout/topbar" />
	<LinearLayout 
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"  
    android:textSize="15dp"  
	android:layout_margin="8px"    
    >
        <ImageView 
        android:id="@+id/piuserpic" 
        android:src="@drawable/mba_l" 
        android:layout_height="wrap_content" 
        android:layout_width="wrap_content"         
        android:layout_alignParentLeft="true"
        android:layout_margin="8px"
        >
        </ImageView>
        <LinearLayout 
	    	android:orientation="vertical"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_toRightOf="@+id/piuserpic"		   
		    android:layout_margin="8px"
		    >
        <TextView
        	android:id="@+id/piname" 
        	android:layout_height="wrap_content"         	
        	android:layout_width="wrap_content" 
        	android:text="username" 
        	android:textSize="20dp"
        	android:textStyle="bold"    
        	android:layout_margin="8px"  
        	android:gravity="center"  	        	
        	>
       </TextView>
        <TextView
        	android:id="@+id/piename" 
	        android:layout_height="wrap_content" 	         
	        android:layout_width="wrap_content" 
	        android:text="ename" 	      
			android:layout_margin="8px"
			android:gravity="center"
	        >
        </TextView>
        <TextView
        android:id="@+id/piclassnum" 
        android:layout_height="wrap_content"          
        android:layout_width="wrap_content" 
        android:text="classnum"
			android:layout_margin="8px"             
        >
        </TextView>   
      <LinearLayout 
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"  
    android:textSize="15dp"  
	android:layout_margin="8px"    
    >       
        <TextView
        android:id="@+id/pimobile" 
        android:layout_height="wrap_content"          
        android:layout_width="wrap_content" 
        android:text="mobile"      
			android:layout_margin="8px"   
        >
        </TextView>
        <ImageView         
        android:src="@drawable/phone_20" 
        android:layout_height="wrap_content" 
        android:layout_width="wrap_content"         
        android:layout_alignParentLeft="true"
        android:layout_margin="8px"
        >
     	 </ImageView>
     </LinearLayout> 
       </LinearLayout>  
	</LinearLayout>  
        <TextView
        android:id="@+id/piemail" 
        android:layout_height="wrap_content"          
        android:layout_width="wrap_content" 
        android:text="email"
			android:layout_margin="8px"               
        >
        </TextView>  	
        <TextView
        android:id="@+id/pilocation" 
        android:layout_height="wrap_content"          
        android:layout_width="wrap_content" 
        android:text="location" 
		android:layout_margin="8px"                      
        >
        </TextView>           	
<TextView
	android:id="@+id/picompany"	 
	android:text="company" 	 	 
	android:layout_height="fill_parent" 
	android:layout_width="fill_parent" 
			android:layout_margin="8px"
	>
	</TextView>	
<TextView
	android:id="@+id/piindustry"	 
	android:text="industry" 	 	 
	android:layout_height="fill_parent" 
	android:layout_width="fill_parent" 
	 	        android:textSize="15dp"  
			android:layout_margin="8px"
	>
	</TextView>
<TextView
	android:id="@+id/pititle"	 
	android:text="title" 	 	 
	android:layout_height="fill_parent" 
	android:layout_width="fill_parent"  
			android:layout_margin="8px"	 
	>
	</TextView>	
	<TextView
	android:id="@+id/picountry"	 
	android:text="country" 	 	 
	android:layout_height="fill_parent" 
	android:layout_width="fill_parent" 	          
			android:layout_margin="8px"	 
	>
	</TextView>	
	<TextView
	android:id="@+id/pibirthday"	 
	android:text="birthday" 	 	 
	android:layout_height="fill_parent" 
	android:layout_width="fill_parent" 	          
			android:layout_margin="8px"	 
	>
	</TextView>	
	<TextView
	android:id="@+id/piaddress"	 
	android:text="address" 	 	 
	android:layout_height="fill_parent" 
	android:layout_width="fill_parent"         
	android:layout_margin="8px"	 	 
	>
	</TextView>	
	<TextView
	android:id="@+id/pihobby"	 
	android:text="hobby" 	 	 
	android:layout_height="fill_parent" 
	android:layout_width="fill_parent" 
	android:layout_margin="8px"  
					 
	>
	</TextView>	
	<TextView
	android:id="@+id/picarnumber"	 
	android:text="carnumber" 	 	 
	android:layout_height="fill_parent" 
	android:layout_width="fill_parent" 	
	android:layout_margin="8px" 
	>
	</TextView>	
	<TextView
	android:id="@+id/pidescription"	 
	android:text="description" 	 	 
	android:layout_height="fill_parent" 
	android:layout_width="fill_parent" 	
	android:layout_margin="8px"
	>
	</TextView>	
	
	
				
</LinearLayout>
</ScrollView>