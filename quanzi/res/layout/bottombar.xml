<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/bottombarLayout" style="@android:style/ButtonBar"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:layout_alignParentBottom="true" android:orientation="horizontal"
	android:padding="0dp"		
	android:background="@color/bottomlayout">
	<LinearLayout android:layout_width="wrap_content"
		android:id="@+id/bnhomelayout"
		android:layout_height="wrap_content" android:orientation="vertical"
		android:background="@drawable/layout_selector"
		android:layout_weight="1" android:gravity="center">
		<ImageButton android:id="@+id/bnhome" android:enabled="false"
			style="@style/bottombn" android:background="@drawable/connect38"
			android:layout_width="38dp" android:layout_height="wrap_content"></ImageButton>
		<TextView android:text="圈子" android:layout_height="wrap_content"
			android:layout_width="wrap_content">
		</TextView>
	</LinearLayout>
	<LinearLayout android:layout_width="wrap_content"
	android:background="@drawable/layout_selector"
	android:id="@+id/bnhuodonglayout"
		android:layout_height="wrap_content" android:orientation="vertical"
		android:layout_weight="1" android:gravity="center">
		<ImageButton android:id="@+id/bnhuodong" android:enabled="false"
			style="@style/bottombn" android:background="@drawable/huodong38"
			android:layout_width="38dp" android:layout_height="wrap_content"></ImageButton>
		<TextView android:text="活动" android:layout_height="wrap_content"
			android:layout_width="wrap_content">
		</TextView>
	</LinearLayout>

	<LinearLayout android:layout_width="wrap_content"
	android:background="@drawable/layout_selector"
	android:id="@+id/bnmsglayout"
		android:layout_height="wrap_content" android:orientation="vertical"
		android:layout_weight="1" android:gravity="center">
		<ImageButton android:id="@+id/bnmsg" android:enabled="false"
			style="@style/bottombn" android:background="@drawable/mail38"
			android:layout_width="38dp" android:layout_height="wrap_content"></ImageButton>
		<TextView android:text="信息" android:layout_height="wrap_content"
			android:layout_width="wrap_content">
		</TextView>
	</LinearLayout>

	<LinearLayout android:layout_width="wrap_content"
	android:background="@drawable/layout_selector"
	android:id="@+id/bncontactlayout"
		android:layout_height="wrap_content" android:orientation="vertical"
		android:layout_weight="1" android:gravity="center">

		<ImageButton android:id="@+id/bncontact" android:enabled="false"
			style="@style/bottombn" android:background="@drawable/contact38"
			android:layout_width="38dp" android:layout_height="wrap_content"></ImageButton>
		<TextView android:text="联系人" android:layout_height="wrap_content"
			android:layout_width="wrap_content">
		</TextView>
	</LinearLayout>

	<LinearLayout android:layout_width="wrap_content"
	android:id="@+id/bnotherlayout"
	android:background="@drawable/layout_selector"
		android:layout_height="wrap_content" android:orientation="vertical"
		android:layout_weight="1" android:gravity="center">
		<ImageButton android:id="@+id/bnotheract" android:enabled="false"
			style="@style/bottombn" android:background="@drawable/otherpoint38"
			android:layout_width="38dp" android:layout_height="wrap_content"></ImageButton>
		<TextView android:text="更多" android:layout_height="wrap_content"
			android:layout_width="wrap_content">
		</TextView>
	</LinearLayout>
</LinearLayout>